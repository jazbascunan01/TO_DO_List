generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String
  completed   TaskStatus @default(PENDING)
  createdAt   DateTime   @default(now())
}
